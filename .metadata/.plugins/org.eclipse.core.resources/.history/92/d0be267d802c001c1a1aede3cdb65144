package programas;

import java.util.Scanner;
import java.io.PrintStream;

public class clase1 {

	public static void main(String[] args) {
		
		Scanner leer = new Scanner(System.in);
		PrintStream io = new PrintStream(System.out);
		
		String nombre [] = new String[2];
		String [] calificacion = {"Sobresaliente","Muy bien","Bien","Suspenso"};
		float [] nota = new float [2];
		float tmp = 0;
		
		
		io.println("Calificar alumnos...");
		io.println("----------------------------------");
		
		
		for (int i=0; i<2; i++) {
			io.print("Nombre ->");
			nombre[i] = leer.next();
			io.print("Nota =");
			tmp = leer.nextFloat();
			if ((tmp>=0) && (tmp<=10)) {
				nota[i] = tmp ;
			}//if
			
			else {
				io.println("Valor invalido, tiene que ser entre 0 y 10");
			}
		}//for
		
			io.println("=======================================================");
			for (int i=0; i<nota.length; i++) {
				io.print (nombre[i]+ "     "+nota[i]);
				if ((nota[i]>=0) && (nota[i]<=4.99));
				io.println(calificacion[3]);
				else if ((nota[i]>=5) && (nota[i]<=6.99));
				io.println(calificacion[2]);
				else if ((nota[i]>=7) && (nota[i]<=8.99));
				io.println(calificacion[1]);
				if ((nota[i]>=9) && (nota[i]<=10));
				io.println(calificacion[0]);
				
			}
	}//main
}//clase
